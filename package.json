{
  "name": "wordgroupcount",
  "version": "1.0.2",
  "author": "Thiago Lopes da Silva",
  "license": "Copyright (c) 2019  Thiago Lopes da Silva",
  "description": "Tool to count words in Scientific papers",
  "main": "index.js",
  "scripts": {
    "build": "tsc ",
    "buid:development": "tsc -W",
    "test": "mocha --require ts-node/register test/**/*.ts",
    "test:coverage": "tsc && nyc mocha build/test/",
    "test:normalize": "rm -rf ./node_modules/.cache"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/ISourceReader.ts",
      "**/index.ts",
      "**/test/*",
      "**/coverage/*"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thiagoolsilva/wordCount"
  },
  "bugs": {
    "url": "https://github.com/thiagoolsilva/wordCount/issues"
  },
  "homepage": "https://github.com/thiagoolsilva/wordCount",
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/minimist": "^1.2.0",
    "@types/node": "^11.13.14",
    "@types/properties-reader": "0.0.1",
    "bibtex2json": "0.1.0-1",
    "dotenv": "^8.0.0",
    "fs": "0.0.1-security",
    "minimist": "^1.2.0",
    "typescript": "^3.5.1",
    "underscore": "^1.12.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.3.0"
  }
}